<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/design_default_color_primary"
        android:elevation="11dp"
        android:layout_margin="1dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="6dp">
            <ImageView
                android:id="@+id/iconRv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Music Video Icon"
                android:scaleType="fitXY"
                android:src="@drawable/spotify_icon"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="4">
                <TextView
                    android:id="@+id/titleRv"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Video title"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author: Arijit Singh"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genere: Rock"
                    android:textColor="@color/white"
                    android:textStyle="italic"
                    android:textSize="10dp"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/favRv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Song Name"
                android:src="@drawable/star"
                app:tint="#FFF"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>